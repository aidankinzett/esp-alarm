void handleRoot() {
  server.send(200, "text/html", "<h2>Hello from esp-alarm! (" + (String)deviceName 
    + ") </h2><h3>I'm alive and monitoring for non excellent behaviour! ;)</h3>");
}

void handleNotFound() {
  String message = "File Not Found\n\n";
  message += "URI: ";
  message += server.uri();
  message += "\nMethod: ";
  message += (server.method() == HTTP_GET) ? "GET" : "POST";
  message += "\nArguments: ";
  message += server.args();
  message += "\n";
  for (uint8_t i = 0; i < server.args(); i++) {
    message += " " + server.argName(i) + ": " + server.arg(i) + "\n";
  }
  server.send(404, "text/plain", message);
}
